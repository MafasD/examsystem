<h2 class="page-header">Edit Exam</h2>
<form action="/exams/<%= exam.id %>?_method=PUT" method="POST">
  <div class="form-item">
    <label for="name">Exam Name:</label>
    <input type="text" name="name" id="name" value="<%= exam.name %>" required>
  </div>
  <div class="form-item">
    <label>Select the questions:</label>
    <% for (const question of questions) { %>
      <div style="line-height: 30px;">
        <!--Here we list the questions with checkboxes next to them. If question is already inside an exam, then it will be checked by default:-->
        <input type="checkbox" name="questions" id="question-<%= question.id %>" value="<%= question.id %>"
          <% if (exam.questions.includes(question.id)) { %>  
            checked
          <% } %>
        >   
        <label for="question-<%= question.id %>"><%= question.question %></label>
      </div>
    <% } %>
  </div>
  <div class="form-row form-row-end btn-row">
    <a class="btn btn-danger" href="/exams/<%= exam.id %>">Cancel</a>
    <button class="btn btn-primary" type="submit">Update</button>
  </div>
</form>